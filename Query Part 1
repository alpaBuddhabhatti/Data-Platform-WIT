

--1. SELECT Records
SELECT * FROM [SALESLT].[CUSTOMER];
SELECT FIRSTNAME FROM [SALESLT].[CUSTOMER];
SELECT FIRSTNAME, MIDDLENAME FROM [SALESLT].[CUSTOMER];
SELECT FIRSTNAME AS FNAME, MIDDLENAME  AS FNAME FROM [SALESLT].[CUSTOMER];
SELECT FIRSTNAME +' ' + LASTNAME  AS FNAME FROM [SALESLT].[CUSTOMER];
SELECT TOP (5) * FROM [SALESLT].[CUSTOMER]
SELECT DISTINCT TOP (5) ADDRESSTYPE FROM [SALESLT].[CUSTOMERADDRESS]

--2. SELECT RECORDS WITH FILTER 

SELECT * FROM [SALESLT].[CUSTOMER] WHERE FIRSTNAME ='ORLANDO';
SELECT FIRSTNAME FROM [SALESLT].[CUSTOMER] WHERE FIRSTNAME ='ORLANDO';
SELECT FIRSTNAME, MIDDLENAME FROM [SALESLT].[CUSTOMER] WHERE FIRSTNAME ='ORLANDO';
SELECT FIRSTNAME AS FNAME, MIDDLENAME  AS FNAME FROM [SALESLT].[CUSTOMER] WHERE FIRSTNAME ='ORLANDO';
SELECT FIRSTNAME +' ' + LASTNAME  AS FNAME FROM [SALESLT].[CUSTOMER] WHERE FIRSTNAME ='ORLANDO';

--3. UPDATE RECORD 
UPDATE [SALESLT].[CUSTOMER] SET NAMESTYLE='TRUE' WHERE FIRSTNAME ='ORLANDO' AND CUSTOMERID=1;
-- SELECT * FROM [SALESLT].[CUSTOMER] WHERE FIRSTNAME ='ORLANDO';
UPDATE [SALESLT].[CUSTOMER] SET MIDDLENAME='N.' WHERE FIRSTNAME ='ORLANDO'
-- SELECT * FROM [SALESLT].[CUSTOMER] WHERE FIRSTNAME ='ORLANDO';

--4. DELETE RECROD FROM TABLE

DELETE FROM [SALESLT].[CUSTOMER] WHERE CUSTOMERID=2

SELECT * FROM [SALESLT].[CUSTOMER] WHERE CUSTOMERID=2


-- LOAD DATA FROM TWO DIFFRENT QUERIES/DATASETS

SELECT CUSTOMERID, FIRSTNAME,MIDDLENAME,LASTNAME FROM [SALESLT].[CUSTOMER] WHERE CUSTOMERID=100
UNION
SELECT CUSTOMERID, FIRSTNAME,MIDDLENAME,LASTNAME  FROM [SALESLT].[CUSTOMER] WHERE LEN(LASTNAME)!=0;

SELECT CUSTOMERID, FIRSTNAME,MIDDLENAME,LASTNAME FROM [SALESLT].[CUSTOMER] WHERE CUSTOMERID=100
UNION ALL
SELECT CUSTOMERID, FIRSTNAME,MIDDLENAME,LASTNAME  FROM [SALESLT].[CUSTOMER] WHERE LEN(LASTNAME)!=0;
