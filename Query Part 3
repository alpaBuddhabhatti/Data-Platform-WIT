-- INNER JOIN TO GET CUSTOMER RECORD + ADDRESSTYPE WHOES ADDRESS TYPE = SHIPPING 
SELECT CA.ADDRESSTYPE, C.*  FROM [SALESLT].[CUSTOMER] C 
INNER JOIN [SALESLT].[CUSTOMERADDRESS] CA 
ON C.CUSTOMERID=CA.CUSTOMERID
WHERE CA.ADDRESSTYPE='SHIPPING'

-- SUBQUERY TO GET ONLY CUSTOMER RECORDS WHOES ADDRESSTYPE =SHIPPING

SELECT  C.*  FROM [SALESLT].[CUSTOMER] C 
WHERE C.CUSTOMERID IN ( SELECT CA.CUSTOMERID FROM [SALESLT].[CUSTOMERADDRESS] CA 
WHERE CA.ADDRESSTYPE='SHIPPING')
